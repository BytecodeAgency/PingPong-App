{
    "extends": [
        "tslint-config-airbnb"
    ],
    "rules": {
        "arrow-parens": false,
        "max-line-length": [true, 100],
        "import-name": false,
        "no-console": [true, "log", "error"],
        "no-empty": true,
        "no-invalid-this": true,
        "indent": [true, "spaces", 4],
        "prefer-object-spread": true,
        "semicolon": [true, "always"],
        "ter-arrow-parens": [false, "as-needed"],
        "ter-indent": [true, 4],
        "triple-equals": true,
        "variable-name": {
            "options": [
                "ban-keywords",
                "check-format",
                "allow-pascal-case"
            ]
        }
    }
}
